@model VendasWebMvc.Models.Vendedor
@{
    ViewData["Title"] = "Criar";
}

<h1>@ViewData["Title"]</h1>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="col-form-label"></label>
                <input asp-for="Nome" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="col-form-label"></label>
                <input asp-for="DataNascimento" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="SalarioBase" class="col-form-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-success">Criar</button>
            </div>
        </form>

    </div>
</div>